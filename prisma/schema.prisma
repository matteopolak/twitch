generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CommentFragment {
  id            Int         @id @default(autoincrement())
  comment       CommentEdge @relation(fields: [commentEdgeId], references: [id])
  commentEdgeId String      @db.Uuid
  text          String
  emote         String?
}

model CommentEdge {
  id        String            @id @db.Uuid
  user      User              @relation(fields: [userId], references: [id])
  userId    Int
  video     VideoEdge         @relation(fields: [videoId], references: [id])
  videoId   Int
  fragments CommentFragment[]
}

model VideoEdge {
  id       Int           @id
  author   User          @relation(fields: [authorId], references: [id])
  authorId Int
  comments CommentEdge[]
}

model User {
  id       Int           @id
  username String
  comments CommentEdge[]
  videos   VideoEdge[]
}
