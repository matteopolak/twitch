{
	"env": {
			"browser": true,
			"es2021": true
	},
	"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended"
	],
	"overrides": [
		{
			"files": ["src/**/*.ts"]
		}
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
	},
	"plugins": [
			"@typescript-eslint"
	],
	"rules": {
			"indent": [
					"warn",
					"tab",
					{ "flatTernaryExpressions": true, "offsetTernaryExpressions": true }
			],
			"linebreak-style": [
					"error",
					"unix"
			],
			"quotes": [
					"error",
					"single"
			],
			"semi": [
					"error",
					"always"
			],
			"no-mixed-spaces-and-tabs": "off",
			"@typescript-eslint/no-non-null-assertion": "off"
	}
}